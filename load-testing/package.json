{
  "name": "bodega-academy-load-testing",
  "version": "1.0.0",
  "description": "Load testing scripts for Bodega Academy",
  "type": "module",
  "scripts": {
    "setup-users": "node setup-test-users.js",
    "test:artillery": "artillery run artillery-config.yml",
    "test:artillery:report": "artillery run artillery-config.yml --output report.json && artillery report report.json --output report.html",
    "test:k6": "k6 run k6-load-test-fixed.js",
    "test:k6:simple": "k6 run --vus 10 --duration 2m k6-load-test-fixed.js",
    "test:k6:auth": "k6 run k6-supabase-auth.js",
    "test:k6:small": "k6 run --vus 10 --duration 2m k6-load-test-fixed.js",
    "test:k6:medium": "k6 run --vus 50 --duration 5m k6-load-test-fixed.js",
    "test:k6:large": "k6 run k6-load-test-fixed.js",
    "test:k6:stress": "k6 run --vus 200 --duration 1m k6-load-test-fixed.js",
    "test:quick": "artillery quick --count 50 --num 100 https://bodegaacademy.vercel.app"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "artillery": "^2.0.16"
  },
  "keywords": [
    "load-testing",
    "performance",
    "artillery",
    "k6"
  ],
  "author": "Bodega Academy Team",
  "license": "MIT"
}
